{
  "name": "@microflash/remarkability",
  "description": "A compact CSS library for a pleasant reading experience on the web",
  "version": "1.0.0",
  "main": "dist/remarkability.min.css",
  "scripts": {
    "dist": "npm-run-all build:*",
    "build": "npm-run-all build:*",
    "build:clean": "shx rm -rf dist",
    "build:lint": "stylelint \"scss/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "build:css": "sass scss/remarkability.scss:dist/remarkability.css",
    "build:postcss": "postcss --config postcss.config.js --replace \"dist/*.css\" \"!dist/*.min.css\"",
    "build:minify": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/remarkability.min.css dist/remarkability.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "clean-css-cli": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.0.7",
    "postcss-cli": "^8.0.0",
    "sass": "^1.26.11",
    "shx": "^0.3.2",
    "stylelint": "^13.7.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0"
  },
  "repository": "https://github.com/Microflash/remarkability.git",
  "author": "Naiyer Asif (https://mflash.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Microflash/remarkability/issues"
  },
  "homepage": "https://remarkability.netlify.app",
  "keywords": [
    "markdown",
    "css",
    "sass",
    "html",
    "generated"
  ]
}
