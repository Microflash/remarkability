{
  "name": "@microflash/remarkability",
  "version": "0.7.2",
  "description": "Baseline CSS for textual content",
  "main": "dist/remarkability.min.css",
  "scripts": {
    "build": "npm-run-all dist:*",
    "dist:clean": "shx rm -rf dist",
    "dist:css": "sass scss/remarkability.scss dist/remarkability.css && sass scss/remarkability.global.scss dist/remarkability.global.css",
    "dist:postcss": "postcss --config postcss.config.js --replace \"dist/*.css\" \"!dist/*.min.css\"",
    "dist:minify": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/remarkability.min.css dist/remarkability.css && cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/remarkability.global.min.css dist/remarkability.global.css",
    "dev": "npm-run-all dev:*",
    "dev:clean": "shx rm -rf .sitecache && shx mkdir .sitecache && shx rm -rf docs && shx mkdir docs",
    "dev:docs": "node src/generate.js < src/content/index.md > .sitecache/generated.html",
    "dev:css": "sass src/styles/index.scss .sitecache/index.css",
    "dev:postcss": "postcss --config postcss.config.js --replace \".sitecache/*.css\" \"!.sitecache/*.min.css\"",
    "dev:minify": "cleancss --level 1 --format breakWith=lf --output .sitecache/index.min.css .sitecache/index.css",
    "dev:postprocess": "node src/postprocess.js"
  },
  "dependencies": {
    "autoprefixer": "^9.7.6",
    "clean-css-cli": "^4.3.0",
    "postcss-cli": "^7.1.0",
    "sass": "^1.26.5"
  },
  "devDependencies": {
    "highlight.js": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "rehype-format": "^3.0.0",
    "rehype-highlight": "^4.0.0",
    "rehype-raw": "^4.0.1",
    "rehype-stringify": "^7.0.0",
    "remark-autolink-headings": "^6.0.0",
    "remark-external-links": "^6.0.0",
    "remark-parse": "^8.0.2",
    "remark-rehype": "^6.0.0",
    "remark-slug": "^6.0.0",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "unified": "^9.0.0",
    "unified-stream": "^1.0.5"
  },
  "repository": "https://github.com/Microflash/remarkability.git",
  "author": "Naiyer Asif",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Microflash/remarkability/issues"
  },
  "homepage": "https://mflash.dev/remarkability",
  "keywords": [
    "markdown",
    "css",
    "sass",
    "html",
    "generated"
  ]
}
